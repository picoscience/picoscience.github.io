---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section class="max-w-4xl mx-auto px-6 mb-12 lg:mb-16">
  {
    title && (
      <h2 class="text-2xl lg:text-3xl font-semibold text-gray-900 mb-6 border-b border-gray-200 pb-2">
        {title}
      </h2>
    )
  }
  <slot />
</section>
