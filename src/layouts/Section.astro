---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    padding-inline: 1.5rem;
    max-width: 720px;
    margin: 0 auto 30px;
  }
  h2 {
    margin-bottom: 6px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }
  p {
    color: #999;
  }
</style>
