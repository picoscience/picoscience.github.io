---
import Section from "@/layouts/Section.astro";
import { work } from "@cv";
---

<Section title="Experiencia">
  <div class="space-y-8">
    {
      work.map(({ name, position, startDate, endDate, summary }) => (
        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
            <h3 class="text-xl font-semibold text-gray-900">{name}</h3>
            <span class="text-sm text-gray-500 font-medium mt-1 sm:mt-0">
              {startDate} {endDate ? `- ${endDate}` : "- Presente"}
            </span>
          </div>
          <h4 class="text-lg font-medium text-gray-700 mb-3">{position}</h4>
          <p class="text-gray-600 leading-relaxed">{summary}</p>
        </div>
      ))
    }
  </div>
</Section>
