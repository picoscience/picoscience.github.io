---
import Section from "@/layouts/Section.astro";
import { projects } from "@cv";

// Importar iconos de tecnologías
import React from "@/icons/react.astro";
import Next from "@/icons/next.astro";
import TypeScript from "@/icons/type.astro";
import JavaScript from "@/icons/javascript.astro";
import Python from "@/icons/python.astro";
import Django from "@/icons/django.astro";
import Tailwind from "@/icons/tailwind.astro";
import TensorFlow from "@/icons/tensorflow.astro";
import CSS from "@/icons/css.astro";
import AstroIcon from "@/icons/astro.astro";
import Expo from "@/icons/expo.astro";

const TECH_ICONS: Record<string, any> = {
  React: React,
  NextJS: Next,
  "Next.js": Next,
  Typescript: TypeScript,
  TypeScript: TypeScript,
  JavaScript: JavaScript,
  Python: Python,
  Django: Django,
  Tailwind: Tailwind,
  Tensorflow: TensorFlow,
  CSS: CSS,
  Astro: AstroIcon,
  Expo: Expo,
  "React Native": React,
  Frontend: React,
  FullStack: Django,
  JWT: JavaScript,
};

// Función para determinar si es un repositorio de GitHub
const isGitHubRepo = (url: string) => url.includes("github.com");
const isLiveDemo = (url: string) => !url.includes("github.com");
---

<Section title="Proyectos Destacados">
  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    {
      projects.map(({ name, description, highlights, url }) => (
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1 flex flex-col justify-between h-full group">
          <div class="space-y-4">
            <div class="flex items-start justify-between">
              <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600 transition-colors duration-300 line-clamp-2">
                {name}
              </h3>
              {url && (
                <div class="flex gap-2 ml-3 flex-shrink-0">
                  {isLiveDemo(url) && (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      title="Ver demo en vivo"
                      class="p-2 rounded-lg bg-primary-50 text-primary-600 hover:bg-primary-100 transition-colors duration-300"
                    >
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0" />
                        <path d="M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6" />
                      </svg>
                    </a>
                  )}
                  {isGitHubRepo(url) && (
                    <a
                      href={url}
                      target="_blank"
                      rel="noopener noreferrer"
                      title="Ver código en GitHub"
                      class="p-2 rounded-lg bg-gray-50 text-gray-600 hover:bg-gray-100 transition-colors duration-300"
                    >
                      <svg
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                      >
                        <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                      </svg>
                    </a>
                  )}
                </div>
              )}
            </div>

            <p class="text-gray-600 leading-relaxed text-sm line-clamp-3">
              {description}
            </p>
          </div>

          <div class="mt-6 pt-4 border-t border-gray-100">
            <div class="flex flex-wrap gap-2">
              {highlights.slice(0, 5).map((tech) => {
                const Icon = TECH_ICONS[tech];
                return (
                  <div class="flex items-center gap-1.5 px-2.5 py-1 bg-gray-50 hover:bg-gray-100 transition-colors duration-300 rounded-full text-xs font-medium text-gray-700 group/tech">
                    {Icon && (
                      <div class="text-gray-500 group-hover/tech:text-gray-700 transition-colors duration-300">
                        <Icon />
                      </div>
                    )}
                    <span>{tech}</span>
                  </div>
                );
              })}
              {highlights.length > 5 && (
                <div class="flex items-center px-2.5 py-1 bg-gray-50 rounded-full text-xs font-medium text-gray-500">
                  +{highlights.length - 5}
                </div>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Section>
