---
import Section from "@/layouts/Section.astro";
import { education } from "@cv";
---

<Section title="EducaciÃ³n">
  <div class="space-y-8">
    {
      education.map(({ institution, area, startDate, endDate, courses }) => (
        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow duration-300">
          <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-3">
            <h3 class="text-xl font-semibold text-gray-900">{institution}</h3>
            <span class="text-sm text-gray-500 font-medium mt-1 sm:mt-0">
              {startDate} - {endDate}
            </span>
          </div>
          <h4 class="text-lg font-medium text-gray-700 mb-4">{area}</h4>

          {courses && courses.length > 0 && (
            <div class="mt-4">
              <h5 class="text-base font-medium text-gray-800 mb-3">
                Cursos Relevantes
              </h5>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {courses.map((course) => (
                  <li class="flex items-start gap-2">
                    <div class="w-2 h-2 bg-primary-500 rounded-full flex-shrink-0 mt-2" />
                    <span class="text-sm text-gray-600">{course}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}
        </div>
      ))
    }
  </div>
</Section>
