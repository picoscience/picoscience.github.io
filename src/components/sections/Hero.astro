---
import Section from "@/layouts/Section.astro";
import { basics } from "static/cv.json";
import LinkedIn from "@/icons/LinkedIn.astro";
import GitHub from "@/icons/GitHub.astro";
import X from "@/icons/X.astro";
import Phone from "@/icons/Phone.astro";
import Mail from "@/icons/Mail.astro";
import WorldMap from "@/icons/WorldMap.astro";

const { name, label, email, phone, location, profiles } = basics;
const { city, region } = location;
const SOCIAL_ICONS: Record<string, any> = {
  LinkedIn,
  GitHub,
  X,
};
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} through ${email}.`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Call ${name} via ${phone}.`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, username, url }) => {
            const Icon = SOCIAL_ICONS[network];
            return (
              <a
                href={url}
                title={`Visit ${name} in ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
      </footer>
    </div>
    <figure>
      <img src="static/hero.png" alt={name} />
    </figure>
  </div>
</Section>

<style>
  .container {
    gap: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: start;
  }
  .info {
    flex: 1 1 0%;
  }
  span {
    display: flex;
    align-items: center;
    gap: 0.3rem;
    font-size: 0.9rem;
  }
  figure {
    width: 120px;
    height: 120px;
  }
  h1 {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.03rem;
  }
  h2 {
    text-wrap: balance;
    font-size: 1rem;
    color: #999;
    font-weight: 500;
    margin-bottom: 4px;
  }
  img {
    border-radius: 20px;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  footer a {
    color: #777;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border-radius: 6px;
    margin: 0;
    width: 32px;
    height: 32px;
    padding: 4px;
    border: solid 1px #eee;
    transition: all 0.3s ease-in-out;
  }
  a:hover {
    background-color: #f3f3f3;
    border-color: #dddd;
  }
  footer {
    margin-top: 8px;
    display: flex;
    justify-content: centers;
    align-items: center;
    gap: 4px;
  }
</style>
